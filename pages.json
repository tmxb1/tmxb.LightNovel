{
	"easycom": {
	    "autoscan": true,
	    "custom": {
	      // 匹配 uni-ui 组件
		  "^u-choose": "@/uni_modules/uview-plus/components/u-choose/u-choose.vue",
	      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
		  "^u--(.*)": "@/uni_modules/uview-plus/components/u-$1/u-$1.vue",
		  "^up-(.*)": "@/uni_modules/uview-plus/components/u-$1/u-$1.vue",
		  "^u-([^-].*)": "@/uni_modules/uview-plus/components/u-$1/u-$1.vue"
	    }
	  },
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/home"
		},{
			"path": "pages/index/catalogue"
		},{
			"path": "pages/index/InDetail"
		},{
			"path": "pages/index/read"
		},{
			"path": "pages/index/bookshelf"
		},{
			"path": "pages/index/library"
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"uniIdRouter": {},
	"tabBar": {
		"list": [
			{
				"text": "书架",
				"pagePath": "pages/index/bookshelf",
				"iconPath": "static/book.png",//未选中图标
				"selectedIconPath": "static/bookchalk.png"   //选中图标
			},{
				"text": "首页",
				"pagePath": "pages/index/home",
				"iconPath": "static/home.png",
				"selectedIconPath": "static/home_chilk.png"
			},{
				"text": "分类",
				"pagePath": "pages/index/library",
				"iconPath": "static/more_app.png",
				"selectedIconPath": "static/more_app_chilk.png"
			}
		],
		"color": "#8B8970",
		"selectedColor": "#66ccff"
	}
}
